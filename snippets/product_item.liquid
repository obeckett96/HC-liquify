<script src="{{ 'li_custom.js' | asset_url }}" type="text/javascript"></script>
<div li-element="product-variant-container" class="product-item_component" x-data="handleVariant({{ product | json | escape }}, {{ product.options_by_name | json | escape }}, {{ product.selected_or_first_available_variant | json | escape }})" x-init="$nextTick(() => { activateVariants() })" @setbundleitem.window="updateBundleItem($event.detail.product, $event.detail.quantity)">
                        <div class="product-item_image-link">
                          <a li-object:href="product.url" href="{{ product.url }}" class="product-item_image-wrapper w-inline-block"><img li-object:src="product.featured_image | image_url: width: 450" li-object:alt="product.featured_image.alt" alt="{{ product.featured_image.alt }}" src="{{ product.featured_image | image_url: width: 450 }}" loading="lazy" class="product-item_image"></a>
                          <div class="product-item_tag_list">
                            {% if product.compare_at_price_max > product.price %}    <div li-if="product.compare_at_price_max > product.price" class="product-item_tag-2 is-red">
    Sale    </div>
{% endif %}
                          </div>
                          <a li-element="add-to-cart" href="#" class="linkto_product w-button" @click="addToCart($event, true)" :disabled="!addToCartButton">Add to Cart</a>
                        </div>
                        <div class="spacer-xxsmall-2"></div>
                        <a li-object:href="product.url" href="{{ product.url }}" class="name_product-item w-inline-block">
                          <div li-object="product.title">{{ product.title }}</div>
                          <div class="price-block">
                            <div li-object="product.compare_at_price | money" class="price-compare">{{ product.compare_at_price | money }}</div>
                            <div li-object="product.price | money">{{ product.price | money }}</div>
                          </div>
                        </a>
                      </div>
