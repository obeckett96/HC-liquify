<div class="container-max">
          <div class="flex-horizontal between align-top">
            <h1 class="heading-style-h1 text-color-primary">
{{ section.settings.text_heading_text }}
</h1>
            <a href="{{ section.settings.url_button_link }}" class="button pink w-button"> {{ section.settings.text_button_text }} </a>
          </div>
          <div class="spacer-medium"></div>
        </div>
        <div class="container-large">
          <div class="product_component">
            <div class="product_list-wrapper w-dyn-list">
              <div role="list" class="product_list w-dyn-items">
                {% for product in section.settings.collection_collection.products limit: section.settings.collection_collection_limit %}
<div role="listitem" class="product_list-item w-dyn-item">
    
                  
    {% render 'product_item', product: product %}
    
                
</div>
{% endfor %}
              </div>
              <div class="hide-2 w-dyn-empty">
                <div>No items found.</div>
              </div>
            </div>
          </div>
        </div> {% schema %} {
    "tag": "section",
    "name": "Featured Products",
    "class": "section product-bestsellers",
    "settings": [
        {
            "id": "text_heading_text",
            "type": "text",
            "label": "Heading Text",
            "default": "Our Bestsellers"
        },
        {
            "id": "text_button_text",
            "type": "text",
            "label": "Button Text",
            "default": "Shop all"
        },
        {
            "id": "url_button_link",
            "type": "url",
            "label": "Button Link"
        },
        {
            "id": "collection_collection",
            "type": "collection",
            "label": "Collection"
        },
        {
            "type": "range",
            "id": "collection_collection_limit",
            "min": 1,
            "max": 99,
            "step": 1,
            "label": "Limit: Collection",
            "default": 6
        }
    ],
    "presets": [
        {
            "name": "Featured Products",
            "category": "Liquify",
            "blocks": []
        }
    ]
} {% endschema %}