<div data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit=3&intent=related" class="section product-bestsellers">
          <div class="container-max">
            <div class="flex-horizontal between align-top">
              <h1 class="heading-style-h1 text-color-primary">
{{ section.settings.text_heading_text }}
</h1>
              <a href="{{ section.settings.url_button_link }}" class="button pink w-button"> {{ section.settings.text_button_text }} </a>
            </div>
            <div class="spacer-medium"></div>
          </div>
          <div class="container-max">
            <div class="product_component">
              <div class="product_list-wrapper w-dyn-list">
                <div role="list" class="product_list w-dyn-items">
                  {% for product in section.settings.collection_bundles.products limit: section.settings.collection_bundles_limit %}
<div role="listitem" class="product_list-item w-dyn-item">
    
                    
    {% render 'product_item', product: This is the default text value %}
    
                  
</div>
{% endfor %}
                </div>
                <div class="hide-2 w-dyn-empty">
                  <div>No items found.</div>
                </div>
              </div>
            </div>
          </div>
        </div> {% schema %} {
    "tag": "section",
    "name": "Bundles",
    "settings": [
        {
            "id": "text_heading_text",
            "type": "text",
            "label": "Heading Text",
            "default": "Make it a bundle"
        },
        {
            "id": "text_button_text",
            "type": "text",
            "label": "Button Text",
            "default": "All Bundles"
        },
        {
            "id": "url_button_link",
            "type": "url",
            "label": "Button Link"
        },
        {
            "id": "collection_bundles",
            "type": "collection",
            "label": "Bundles"
        },
        {
            "type": "range",
            "id": "collection_bundles_limit",
            "min": 1,
            "max": 99,
            "step": 1,
            "label": "Limit: Bundles",
            "default": 6
        }
    ],
    "presets": [
        {
            "name": "Bundles",
            "category": "Liquify",
            "blocks": []
        }
    ],
    "enabled_on": {
        "templates": [
            "product"
        ]
    }
} {% endschema %}